---
import Navbar from "../components/Navbar.astro";
import MainLayout from "../layouts/MainLayout.astro";
const name = 'Juan Manuel Di Martino';
const empresa = `Image Creative Studio`;
---

<MainLayout title="Home Page">

	<h1>Inicio</h1>
	<h4>Hola, {name}</h4>
	<p>Hora actual: {new Date().toLocaleTimeString()}</p>
	<p id="current-time">Momento actual real: </p>

	<footer>
		<p>© <span id="anio"></span>- {empresa}</p>
	</footer>

	<script>

	//Mostrar Año
	const anioElement = document.getElementById('anio');
		if (anioElement) {
		anioElement.textContent = new Date().getFullYear().toString();
		}
	
	//Mostrar Hora Actual Real
	const currentTimeParagraph = document.querySelector('#current-time') as HTMLParagraphElement;
	currentTimeParagraph.innerText = `Momento actual real: ${new Date().toLocaleTimeString()}`;
	
	</script>

</MainLayout>
